<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import java.net.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.LobbyController">
    <stylesheets>
        <URL value="@Lobby.css" />
    </stylesheets>
    <children>
        <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <left>
                <VBox prefHeight="400.0" prefWidth="166.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#backButton" prefHeight="25.0" prefWidth="58.0" text="&lt; Back" />
                        <Label text="Game Info">
                            <font>
                                <Font size="20.0" />
                            </font>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </Label>
                        <Label text="Game name:">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="textGameName" />
                        <Label text="#Players">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="textPlayerCount" editable="false" />
                        <Label text="Host">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="textHostName" editable="false" />
                        <TableView fx:id="tablePlayers" prefHeight="119.0" prefWidth="145.0">
                            <columns>
                                <TableColumn fx:id="columnPlayers" prefWidth="90.0" text="Players" />
                                <TableColumn fx:id="columnRanking" prefWidth="60.0" text="Rank" />
                            </columns>
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </TableView>
                        <Button fx:id="readyButton" mnemonicParsing="false" onAction="#readyButton" prefHeight="42.0" prefWidth="154.0" styleClass="readyButton" text="Ready">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </left>
            <center>
                <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                    <children>
                        <ListView fx:id="chatBox" prefHeight="407.0" prefWidth="434.0" />
                        <HBox prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <TextField fx:id="chatMessage" prefHeight="46.0" prefWidth="364.0">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </TextField>
                                <Button fx:id="sendMessage" mnemonicParsing="false" onAction="#sendMessage" prefHeight="46.0" prefWidth="73.0" text="Send">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
